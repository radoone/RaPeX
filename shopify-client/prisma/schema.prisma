// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model SafetyAlert {
  id            String    @id @default(cuid())
  productId     String
  productTitle  String
  productHandle String?
  shop          String
  checkResult   String    // JSON string containing SafetyCheckResult
  status        String    @default("active") // active, dismissed, resolved
  riskLevel     String    // low, medium, high, serious
  warningsCount Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  dismissedAt   DateTime?
  dismissedBy   String?
  resolvedAt    DateTime?
  notes         String?

  @@index([shop, status])
  @@index([productId, shop])
  @@index([createdAt])
}

model SafetyCheck {
  id           String   @id @default(cuid())
  productId    String
  productTitle String
  shop         String
  isSafe       Boolean
  checkedAt    DateTime
  createdAt    DateTime @default(now())

  @@index([shop, checkedAt])
  @@index([productId, shop])
}

model WebhookError {
  id        String   @id @default(cuid())
  shop      String
  topic     String
  error     String
  payload   String
  createdAt DateTime @default(now())

  @@index([shop, createdAt])
}
